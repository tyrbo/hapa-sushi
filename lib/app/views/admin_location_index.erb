<%= erb :navbar %>
<div class="container">
  <div class="col-lg-5 col-lg-offset-3">
    <div class="form-group">
      <form action='/admin/locations' method='POST' class="form-signin" role="form">
        <h1>Location Page Index</h1>
        <h4>Add a new location:</h4>
        <div class="input-group">
          <input type='text' name='location[title]' placeholder='title' class='form-control'>
          <input type='text' name='location[address]' placeholder='address' class='form-control'>
          <input type='text' name='location[hours]' placeholder='hours' class='form-control'>
          <input type='text' name='location[phone_fax]' placeholder='phone / fax' class='form-control'>
          <input type='text' name='location[delivery]' placeholder='delivery' class='form-control'>
          <input type='text' name='location[reservations]' placeholder='reservations' class='form-control'>
          <span class="input-group-btn">
            <button class="btn btn-primary" type="submit">Submit</button>
          </span>
        </form>
      </div>
    </div>
  </div>
  <div class='row col-lg-3 col-lg-offset-1'>
    <a href="#" class="list-group-item active">Edit Menus</a>
    <div class="list-group">
      <% @locations.each do |location| %>
        <a href="/admin/locations/<%= location.id %>" class="list-group-item"><%= location.title %></a>
      <% end %>
    </div>
  </div>
  <div class="hero-unit col-lg-9">
    <h2>Existing Locations</h2>
    <% @locations.each do |location| %>
      <%= erb :location_tab, locals: { location: location } %>
    <% end %>
  </div>
</div>
